<div id="compare_container" data-hook="" class="container">
	<% if not @product.blank? && @product1.blank? %>
		<h6 class="product-section-title">Compare
		 	<% @product.each do |product1|%>
		 		<%= product1.name %>
		 	<% end %>  And  
		 	<% @product1.each do |product1|%>
		 		<%= product1.name %>
		 	<% end %>
		</h6>
		<% @product.each do |product| %>
		<li id="product_<%= product.id %>" class="columns four" data-hook="featured_products_list_item">
			<div class="">
			  <%= link_to product_image(product), product %>
			</div>
			<%= link_to truncate(product.name, :length => 50), product, :class => 'product-name', :title => product.name %>
			<div class="product-sku">
			  <%= product.sku %>
			</div>
			<span class="price selling hidden"><%= product.display_price %></span>
		</li>
		<% end %>

		<% @product1.each do |product| %>
		<li id="product_<%= product.id %>" class="columns four" data-hook="featured_products_list_item" style="margin-left: 30%;"">
			<div class=">
			  <%= link_to product_image(product), product %>
			</div>
			<%= link_to truncate(product.name, :length => 50), product, :class => 'product-name', :title => product.name %>
			<div class="product-sku">
			  <%= product.sku %>
			</div>
			<span class="price selling hidden"><%= product.display_price %></span>
		</li>
		<% end %>
	<% end %>	

</div>